{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "jest": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "class-methods-use-this": "off",
    "arrow-parens": [2, "always"],
    "no-console": "off",
    "prefer-arrow-callback": "off",
    "consistent-return": "off"
  }
}
